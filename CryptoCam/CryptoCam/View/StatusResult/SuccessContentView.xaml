<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptoCam.Views.StatusResult.SuccessContentView">
  <ContentView.Content>
        <StackLayout Grid.Row="0" Orientation="Vertical"  VerticalOptions="FillAndExpand" BackgroundColor="Transparent">
            <Image Source="{Binding successIconSource}" 
               WidthRequest="144"
               HeightRequest="144"
               Margin="0,144,0,0"               
               />



        

            <Label FontSize="25" Text="{Binding Description}"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" 
                   Margin="0,5,0,0"
                   />
            <Label FontSize="35"
                 Text="{Binding Result}"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   Margin="0,50,0,0"
                   TextColor="Gold"
                   />






        </StackLayout>

    </ContentView.Content>
</ContentView>